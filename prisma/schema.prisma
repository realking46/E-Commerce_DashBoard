generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Float
  stock       Int
  imageUrl    String?  // MUST be optional
  createdAt   DateTime @default(now())
}
